! Enable the extended coloring options
rofi.color-enabled: true

! Property Name     BG       Border   Separator
rofi.color-window:  #202020, #202020, #191919

! Property Name     BG       FG       BG-alt   Head-BG  Head-FG
rofi.color-normal:  #202020, #a7a7a7, #202020, #202020, #ffffff
rofi.color-active:  #202020, #639ee4, #202020, #202020, #639ee4
rofi.color-urgent:  #202020, #dc657d, #202020, #202020, #dc657d

! Set the desired separator style
rofi.separator-style: solid
